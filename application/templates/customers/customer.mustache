<div class="form">

	<div id="customers-customer-edit">

		<input type="hidden" name="customer_id" value="{{#customer}}{{id}}{{/customer}}">

		<input type="hidden" class="first_name" value="{{#customer}}{{first_name}}{{/customer}}">
		<input type="hidden" class="last_name" value="{{#customer}}{{last_name}}{{/customer}}">
		<input type="hidden" class="company_name" value="{{#customer}}{{company_name}}{{/customer}}">
		<input type="hidden" class="default_account_id" value="{{#customer}}{{#default_account}}{{id}}{{/default_account}}{{/customer}}">
		<input type="hidden" class="email" value="{{#customer}}{{email}}{{/customer}}">
		<input type="hidden" class="phone_number" value="{{#customer}}{{phone_number}}{{/customer}}">
		<input type="hidden" class="fax_number" value="{{#customer}}{{fax_number}}{{/customer}}">

		<div class="form-element form-element-first-name">
			<label>First Name</label>
			<input type="text" tabindex="1" class="required customer first_name" name="first_name" value="{{#customer}}{{first_name}}{{/customer}}">
		</div>

		<div class="form-element form-element-last-name">
			<label>Last Name</label>
			<input type="text" tabindex="2" class="required customer last_name" name="last_name" value="{{#customer}}{{last_name}}{{/customer}}">
		</div>

		<div class="form-element form-element-email">
			<label>Email Address</label>
			<input type="text" tabindex="3" class="customer email" name="email" value="{{#customer}}{{email}}{{/customer}}">
		</div>

		<div class="form-element form-element-company-name">
			<label>Company Name</label>
			<input type="text" tabindex="4" class="customer company_name" name="company_name" value="{{#customer}}{{company_name}}{{/customer}}">
		</div>

		<div class="form-element form-element-phone-number">
			<label>Phone Number</label>
			<input type="text" tabindex="5" class="customer phone_number" name="phone_number" value="{{#customer}}{{phone_number}}{{/customer}}">
		</div>

		<div class="form-element form-element-fax-number">
			<label>Fax Number</label>
			<input type="text" tabindex="6" class="customer fax_number" name="fax_number" value="{{#customer}}{{fax_number}}{{/customer}}">
		</div>

		<div class="form-element form-element-default-account-id">
			<label>Terms/Receivable Account</label>
			<select tabindex="7" class="account-dropdown" class="customer default_account_id" name="default_account_id" {{#customer_receivable_account_default}}rel="{{id}}"{{/customer_receivable_account_default}}>
				<option value="">&nbsp;</option>
				<option value="">&nbsp;</option>
				{{#all_accounts_chart_flat}}
					{{^reserved}}
						<option value="{{id}}" {{^receivable}}disabled="disabled"{{/receivable}} {{#customer_current}}selected="selected"{{/customer_current}}>{{{name_print}}}</option>
					{{/reserved}}
				{{/all_accounts_chart_flat}}
			</select>
		</div>
		
		<div class="form-element form-element-actions">
			<span class="oop-oop-oop edit-buttons-placeholder">&nbsp;</span>
			<span class="oop edit-buttons" style="display:none;">&nbsp;</span>
			<span class="oop edit-buttons" style="display:none;"><a href="#" id="customers-customer-edit-cancel" class="button" tabindex="8">Cancel</a></span>
			<span class="oop edit-buttons" style="display:none;"><a href="#" id="customers-customer-edit-save" class="button" tabindex="9">Save</a></span>
		</div>
	</div>
	
	<div id="customers-customer-addresses">

		<div class="row column-4 labels bump-down-most text-bold">
			Customer Addresses (<a href="#" id="customers-customer-address-add">New</a>)
		</div>

		<div class="" id="customers-customer-addresses-container">
			{{#customer_addresses}}
				{{>customers_customer_address}}
			{{/customer_addresses}}

			<div class="clear"></div>
		</div>
	</div>

	<div id="customers-customer-address-form" style="display:none;">

		<input type="hidden" name="customer_id" value="{{#customer}}{{id}}{{/customer}}">
		<input type="hidden" name="address_id" value="">
		
		<div class="form-element form-element-address1">
			<label>Address Line 1</label>
			<input type="text" class="address required" tabindex="8" name="address1">
		</div>

		<div class="form-element form-element-state">
			<label>State/Province</label>
			<input type="text" class="address" tabindex="11" name="state">
		</div>

		<div class="form-element form-element-default-options">
			<label>
				<input type="checkbox" value="1" checked="checked" class="address" name="default-billing">
				Default Billing Address
			</label>
			<label>
				<input type="checkbox" value="1" checked="checked" class="address" name="default-shipping">
				Default Shipping Address
			</label>
		</div>

		<div class="form-element form-element-address2">
			<label>Address Line 2</label>
			<input type="text" class="address" tabindex="9" name="address2">
		</div>

		<div class="form-element form-element-zip">
			<label>Zip</label>
			<input type="text" class="address required" tabindex="12" name="zip">
		</div>

		<div class="form-element form-element-spacer-after-zip"></div>


		<div class="form-element form-element-city">
			<label>City</label>
			<input type="text" class="address required" tabindex="10" name="city">
		</div>

		<div class="form-element form-element-country">
			<label>Country</label>
			<div class="select">
				<select class="address required" tabindex="13" name="country">
					<option value="">&nbsp;</option>
					{{#countries}}
						<option value="{{code}}" {{#default}}rel="default" selected="selected"{{/default}}>{{name}}</option>
					{{/countries}}
				</select>
			</div>
		</div>

		<div class="form-element form-element-actions">
			<a href="#" class="button" id="customers-customer-address-form-save" tabindex="16">Save This Address</a>
			<a href="#" class="button hidden" id="customers-customer-address-form-canceledit" tabindex="17">Cancel Edit</a>
		</div>
	</div>

	<div class="totals-container totals-container-sales-count">
		<label class="text-bold">Sales Orders</label>
		<input type="text" disabled="disabled" class="text-right" value="{{#customer}}{{sales_count}}{{/customer}}">
	</div>

	<div class="totals-container totals-container-total-sales">
		<label class="text-bold">Total Sales</label>
		<input type="text" disabled="disabled" class="text-right" value="{{#customer}}{{sales_total_formatted}}{{/customer}}">
	</div>
	<div class="totals-container totals-container-balance-current">
		<label class="text-bold">Current Balance</label>
		<input type="text" disabled="disabled" class="text-right" value="{{#customer}}{{balance_current_formatted}}{{/customer}}">
	</div>

	<div class="totals-container totals-container-balance-pastdue">
		<label class="text-bold">Past Due</label>
		<input type="text" disabled="disabled" class="text-right" value="{{#customer}}{{balance_pastdue_formatted}}{{/customer}}">
	</div>
</div>

<input type="hidden" id="customers-sales-sales-customer_id" value="{{#customer}}{{id}}{{/customer}}">

<div id="customers-sales-sales" class="row-elements row-elements-alternating-colors text-small bump-down-more">
	<ul>
		<li class="text-bold customer-sale">
			<span class="customer-sale-customer text-left">Customer</span>
			<span class="customer-sale-sale text-center">Sale</span>
			<span class="customer-sale-date text-center">Date</span>
			<span class="customer-sale-status text-center">Status</span>
			<span class="customer-sale-total text-center">Total</span>
			<span class="customer-sale-actions">&nbsp;</span>
		</li>
		{{#sales}}
			{{>customers_sales_sale}}
		{{/sales}}
		{{^sales}}
			<li class="text-bold customer-sale text-center">No sales found.</li>
		{{/sales}}
	</ul>
</div>

<div id="customers-sales-loadsales" class="hidden">
	<br>
	<p class="text-medium text-center">Loading additional sales: please wait...</p>
	<br>
	<p class="text-center spinme">&nbsp;</p>
	<br>
</div>

<div id="customers-sales-endsales" class="hidden">
	<br>
	<p class="text-medium text-center">No additional sales found.</p>
	<br>
</div>