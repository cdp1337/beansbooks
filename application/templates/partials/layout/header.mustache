<div class="header">
	<a href="{{root_wdir}}" title="{{companyname}}">
		{{#companylogo}}
			{{{companylogo}}}
		{{/companylogo}}
		{{^companylogo}}
			<img src="{{root_wdir}}static/images/logo.png" class="logo">
		{{/companylogo}}
	</a>
	
	{{#logged_in}}
		<div class="links">
			<ul>
				<li>
					<a href="{{root_wdir}}auth/logout">
						<i class="icon icon-sign-out"></i>
						Logout
					</a>
				</li>
				<li>
					<a href="{{root_wdir}}myaccount/">
						<i class="icon icon-user"></i>
						My Account
					</a>
				</li>
				<li>
					<a href="{{root_wdir}}help">
						<i class="icon icon-question-circle-o"></i>
						Help
					</a>
				</li>
			</ul>
		</div>
	{{/logged_in}}

	<div class="clear"></div>
</div>
<div class="clear"></div>

<div id="masthead" class="masthead">
	<ul>
		{{#masthead_links}}
			<li class="{{class}} {{#current}}current{{/current}}">
				<a href="{{url}}" class="{{#current}}current{{/current}}">
					{{#icon}}<i class="icon icon-{{icon}}"></i>{{/icon}}
					{{text}}
				</a>
			</li>
		{{/masthead_links}}
	</ul>
</div>
<div class="clear"></div>

{{#system_messages}}
	<div class="system-message {{type}} text-medium">{{{text}}}</div>
{{/system_messages}}

{{#tab_links_defined}}
	<div class="tabs">
		<ul>
			{{#tab_links}}
				<li class="{{#current}}current{{/current}}{{^current}}{{#shrink}}skinny{{/shrink}}{{/current}}"><a href="{{url}}" class="tab" {{#check_print_queue}}id="vendor-print-check-queue-tab-link"{{/check_print_queue}} title="{{text}}">{{#current}}{{text}}{{/current}}{{^shrink}}{{^current}}{{text}}{{/current}}{{/shrink}}{{^current}}{{#shrink}}{{text_short}}{{/shrink}}{{/current}}</a>{{#removable}}<a href="#" class="remove">x</a>{{/removable}}</li>
			{{/tab_links}}
		</ul>
	</div>
{{/tab_links_defined}}
{{^tab_links_defined}}
	<div class="bump-down null"></div>
{{/tab_links_defined}}